
@model List<Category>

@{
    ViewData["Title"] = "Categories";
}

<h1>@ViewData["Title"]</h1>

<div class="mb-3 text-right">
    <a class="btn btn-primary" asp-controller="Categories" asp-action="Create">Create Category</a>
</div>

@if(@ViewData["EditMessage"] != null)
{
<div class="alert alert-warning">
    @ViewData["EditMessage"]
</div>
}

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name Category</th>
            <th scope="col" colspan="2">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Category kategori in Model)
        {
        <tr>
            <th scope="row">@kategori.CategoryID</th>
            <td>@kategori.Name</td>
            <td>
                <a class="btn btn-warning" asp-controller="Categories" asp-action="Edit" asp-route-id="@kategori.CategoryID">Edit</a>
                <a class="btn btn-info" asp-controller="Categories" asp-action="Details" asp-route-id="@kategori.CategoryID">Details</a>
            </td>
            <td>
                <form method="post" action="/Categories/DeletePost/@kategori.CategoryID" class="form-inline">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </td>
        </tr>
        }        
        </tbody>
    </table>
